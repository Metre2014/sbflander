

<%= form_for @contact, :html => {:class => 'form-inline'} do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :comments, 'Comments/Questions' %><br>
    <%= f.text_area :comments, :rows => "5" %>
  </div>
  <div class="field">
    <%#= f.label :from_lender %><br>
    <%= f.hidden_field :from_lender, :value => @contact_from_page %>
    <%#= @contact_from_page %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> fade in">
      <button class="close" data-dismiss="alert">Ã—</button>
      <%= message %>
    </div>
  <% end %>

<% end %>
